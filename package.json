{
  "name": "conway-game-of-life",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "google-chrome build/main.html",
    "build": "npm run build:js && npm run build:html && npm run build:css && npm run build:img",
    "build:js": "webpack",
    "build:html": "rsync -a src/main.html build",
    "build:css": "node-sass src/css/main.sass build/css/main.css",
    "build:img": "rsync -a src/img build",
    "release": "npm run release:js && npm run build:html && npm run build:css",
    "release:js": "webpack --optimize-minimize",
    "clean": "rm -rf build",
    "prewatch": "npm run build",
    "watch": "npm run watch:js & npm run watch:html & npm run watch:css",
    "watch:js": "webpack --watch",
    "watch:html": "watch-run -p 'src/main.html' npm run build:html",
    "watch:css": "watch-run -p 'src/css/main.sass' npm run build:css"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "6.4.0",
    "babel-loader": "6.2.1",
    "babel-preset-es2015": "6.3.13",
    "node-sass": "3.4.2",
    "watch-run": "1.2.4",
    "webpack": "1.12.10"
  },
  "dependencies": {
    "jquery": "2.2.0"
  }
}
